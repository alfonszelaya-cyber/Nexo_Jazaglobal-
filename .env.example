# ==============================
# NEXO / ZYRA - ENV TEMPLATE
# ==============================

# --- APP ---
APP_NAME=NEXO_ZYRA
APP_ENV=production
APP_DEBUG=false
APP_VERSION=1.0.0

# --- SERVER ---
HOST=0.0.0.0
PORT=8000

# --- DATABASE ---
DB_ENGINE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexo_db
DB_USER=nexo_user
DB_PASSWORD=your_secure_password

# --- SECURITY ---
SECRET_KEY=change_this_super_secret_key
JWT_SECRET=change_this_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# --- LOGGING ---
LOG_LEVEL=INFO

# --- STORAGE ---
STORAGE_PATH=/data/storage

# --- DOCKER ---
DOCKER_ENV=true

# --- ZYRA CORE ---
ZYRA_MODE=enterprise
ZYRA_SAFE_MODE=true
ZYRA_AUDIT_ENABLED=true
