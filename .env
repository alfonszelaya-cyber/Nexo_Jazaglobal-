# =========================
# NEXO / ZYRA - ENV CONFIG
# =========================

# --- App ---
APP_NAME=NEXO
APP_ENV=production
DEBUG=false
APP_VERSION=1.0.0

# --- Security ---
SECRET_KEY=CHANGE_THIS_SUPER_SECRET_KEY
JWT_SECRET=CHANGE_THIS_JWT_SECRET
JWT_ALGORITHM=HS256
TOKEN_EXPIRE_MINUTES=60

# --- Database ---
DB_ENGINE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nexo_db
DB_USER=nexo_user
DB_PASSWORD=CHANGE_DB_PASSWORD

DATABASE_URL=postgresql://nexo_user:CHANGE_DB_PASSWORD@localhost:5432/nexo_db

# --- Redis / Cache ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# --- Storage ---
STORAGE_DRIVER=local
STORAGE_PATH=storage/
STORAGE_BUCKET=nexo-bucket

# --- Logging ---
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/system.log

# --- External Services ---
SUPABASE_URL=
SUPABASE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# --- ZYRA Core Flags ---
ZYRA_INTELLIGENCE_ENABLED=true
ZYRA_SAFE_MODE=false
ZYRA_AUDIT_ENABLED=true
